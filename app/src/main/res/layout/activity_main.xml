<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cis470.lakiel.contactmanagefragments.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/contactlist"
                android:name="com.cis470.lakiel.contactmanagefragments.ContactListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="contactlist"/>

            <fragment
                android:id="@+id/contactdetail"
                android:name="com.cis470.lakiel.contactmanagefragments.ContactDetailsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="contactdetail"/>
        </LinearLayout>

        <fragment
            android:id="@+id/contactentry"
            android:name="com.cis470.lakiel.contactmanagefragments.ContactEntryFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="contactentry"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
